{
    "$schema": "https://turbo.build/schema.json",
    "ui": "stream",
    "tasks": {
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**"
            ]
        },
        "deploy": {
            "dependsOn": [
                "lint",
                "build"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        }
    }
}